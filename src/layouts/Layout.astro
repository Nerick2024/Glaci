---
import "../styles/globals.css";
import Navbar from "@/components/Navbar.astro";
import Footer from "@/components/Footer.astro";
import { getLangFromUrl } from "@/i18n";
import Stars from "@/components/Stars.astro";
const lang = getLangFromUrl(Astro.url);
export interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang={lang}>
  <head>
    <meta charset="UTF-8" />
    <meta
      name="description"
      content="GLACI - Grupo Global de Ciudades Inteligentes, se dedica a impulsar la transformación de las ciudades en ecosistemas tecnológicos y sostenibles, centrados en el bienestar y la calidad de vida de sus habitantes a través de la innovación."
    />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/webp" href="/logo/icon.ico" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body>
    <Navbar />
    <slot />
    <div class="h-full w-full fixed top-0 left-0 -z-20 pointer-events-none">
      <Stars />
    </div>
    <Footer />
  </body>
</html>
<script type="">
  import AOS from "aos";
  import "aos/dist/aos.css";

  document.addEventListener("DOMContentLoaded", function () {
    AOS.init();
  });
</script>
<style is:global>
  @import url("https://fonts.googleapis.com/css?family=Montserrat:300,900|Titillium+Web:400,600,700&display=swap");

  :root {
    --color-title: #00bbff;
    --color-text: #ffff;
    --color-text2: #d5d5d5;
    --color-blue: #000c2e;
    --color-bg-1: #000c2e;
    --color-bg-2: #011377;
    --color-bg-light-gradient: #000459;
    --color-bg-dropdown: rgba(0, 3, 68, 0.6);
    --color-world: #009bdd;
  }
  html,
  body {
    font-family: "Titillium Web", sans-serif;
    overflow-x: hidden;
  }

  html {
    background-color: var(--color-bg-1);
    scroll-behavior: smooth;
    scroll-padding-top: 100px;
  }
  /* TÍTULOS */
  h1,
  h2 {
    font-family: "Montserrat", sans-serif;
  }

  /* TEXTO NORMAL */
  h3,
  h4,
  h5,
  h6,
  p,
  span,
  li,
  a,
  button,
  input,
  textarea {
    font-family: "Titillium Web", sans-serif;
  }

  .glass-effect {
    background-color: rgba(255, 255, 255, 0.06);
    border-top: 1px solid rgba(255, 255, 255, 0.25);
    border-bottom: 1px solid rgba(255, 255, 255, 0.25);
    backdrop-filter: blur(5px);
  }

  .shadow-white {
    text-shadow:
      0 1px rgb(31, 84, 99),
      0 2px rgb(31, 84, 99),
      0 3px rgb(31, 84, 99),
      0 4px rgb(31, 84, 99),
      0 5px rgb(31, 84, 99);
  }
</style>
