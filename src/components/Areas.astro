---
import { getLangFromUrl, useTranslation } from "@/i18n";

const lang = getLangFromUrl(Astro.url);
const i18n = await useTranslation(lang);
const { item } = Astro.props;

const area1 = item.AREA1 || [];
const area2 = item.AREA2 || [];
---

<section id="areas" class="text-white">
  <div class="flex justify-center items-center glass-effect py-8">
    <h2
      class="uppercase font-bold text-white text-4xl sm:text-5xl max-w-5xl text-center"
    >
      {i18n.AREAS.TITLE}
    </h2>
  </div>

  <div class="px-4 py-16">
    <div
      class="gap-x-16 gap-y-8 grid grid-cols-1 md:grid-cols-2 mx-auto max-w-6xl md:text-left text-center"
    >
      <div class="flex flex-col gap-8">
        {
          area1.map((area: any, index: number) => (
            <div data-aos="fade-right" data-aos-duration="1000">
              <h3 class="mb-2 font-semibold text-[var(--color-title)] text-2xl">
                {area.TITLE}
              </h3>
              <p class="text-white text-base lg:text-lg">{area.DESCRIPTION}</p>
              {index < area1.length - 1 && (
                <p class="my-4 text-[var(--color-title)] text-xl">● ● ●</p>
              )}
            </div>
          ))
        }

        <a
          data-aos="zoom-in"
          href="#contact"
          class="group inline-flex items-center gap-4 transform transition-colors hover:bg-[var(--color-title)] mx-auto lg:mx-0 mt-10 px-6 py-4 border border-[var(--color-title)] rounded-full w-fit font-semibold text-[var(--color-title)] hover:text-black transition-colors"
        >
          <span>{i18n.AREAS.BUTTON}</span>
          <svg
            xmlns="http://www.w3.org/2000/svg"
            class="fill-[var(--color-title)] group-hover:fill-[var(--color-bg-1)] w-5 h-5 rotate-90 transition-colors transform"
            viewBox="0 0 16 16"
          >
            <path
              fill-rule="evenodd"
              d="M8 15a.5.5 0 0 0 .5-.5V2.707l3.146 3.147a.5.5 0 0 0 .708-.708l-4-4a.5.5 0 0 0-.708 0l-4 4a.5.5 0 1 0 .708.708L7.5 2.707V14.5a.5.5 0 0 0 .5.5"
            ></path>
          </svg>
        </a>
      </div>

      <div class="flex flex-col gap-8">
        {
          area2.map((area: any, index: number) => (
            <div data-aos="fade-left" data-aos-duration="1000">
              <h3 class="mb-2 font-semibold text-[var(--color-title)] text-2xl">
                {area.TITLE}
              </h3>
              <p class="text-white text-base lg:text-lg">{area.DESCRIPTION}</p>
              {index < area2.length - 1 && (
                <p class="my-4 text-[var(--color-title)] text-xl">● ● ●</p>
              )}
            </div>
          ))
        }
      </div>
    </div>
  </div>
</section>
