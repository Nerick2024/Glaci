---
import { getLangFromUrl, useTranslation, slugify } from "@/i18n";
import Button_MoreInformation from "@/components/Button_MoreInformation.astro";
import Stars from "./Stars.astro";
const lang = getLangFromUrl(Astro.url);
const i18n = await useTranslation(lang);
---

<section id="team" class="mx-auto max-w-6xl p-6 flex flex-col w-full gap-8">
  <h1
    data-aos="fade-up"
    data-aos-duration="1000"
    class="mt-4 title-text text-left mb-4"
  >
    <span class="decoration text-[var(--color-title)]">+</span>
    {i18n.TEAM.TITLE}
  </h1>
  <div class="flex flex-col items-center justify-center mx-auto gap-8">
    <h2
      data-aos="fade-in"
      data-aos-duration="1000"
      class="text-center lg:text-left"
    >
      {i18n.TEAM.SUBTITLE}
    </h2>
    <p
      data-aos="fade-in"
      data-aos-duration="1000"
      class="text-center lg:text-left"
    >
      {i18n.TEAM.TEXT}
    </p>
    <div
      class="grid grid-cols-1 md:grid-cols-2 gap-10 items-center justify-center max-w-4xl my-8"
    >
      {
        i18n.TEAM.CARDS.map((card) => (
          <div
            data-aos="zoom-in-up"
            data-aos-duration="1000"
            class="glass-effect border border-white/25 rounded-xl flex p-4 items-center justify-start"
          >
            <div class="border border-white/15 bg-black/5 h-18 aspect-square rounded-lg p-3">
              <img
                src={card.ICON}
                alt={card.TEXT}
                loading="lazy"
                class="w-full h-full object-contain"
              />
            </div>
            <p class="px-4 text-center lg:text-left">{card.TEXT}</p>
            <div class="absolute -bottom-0.5 left-1/2 -translate-x-1/2 w-2/3 h-1 bg-[linear-gradient(to_right,transparent,var(--color-title),transparent)]" />{" "}
          </div>
        ))
      }
    </div>
    <h2
      data-aos="fade-in"
      data-aos-duration="1000"
      class="text-center lg:text-left"
    >
      {i18n.TEAM.TEXT_2}
    </h2>
    <div data-aos="fade-up" data-aos-duration="1000">
      <Button_MoreInformation i18n={i18n} lang={lang} />
    </div>
  </div>
</section>
<section
  class="flex flex-wrap items-center justify-center gap-8 max-w-7xl mx-auto mt-12 mb-24 px-6"
>
  {
    i18n.TEAM.TEAM.slice()
      .sort((a, b) => {
        const key = (name: any) => {
          const parts = name.split(/\s+/).filter(Boolean);
          return parts[1] ?? parts[0] ?? name;
        };
        return key(a.NAME).localeCompare(key(b.NAME), lang, {
          sensitivity: "base",
        });
      })
      .map((director) => (
        <div data-aos="zoom-in" data-aos-duration="1000">
          <a
            href={`/${lang}/consortium/${slugify(director.NAME)}`}
            class="group relative block h-full lg:w-70 aspect-square overflow-hidden rounded-sm bg-gradient-to-t from-gray-400 to-white transition-all duration-300 hover:scale-105"
          >
            <img
              src={director.IMG}
              alt={director.NAME}
              class="w-full h-full object-contain pointer-events-none"
            />
            <div class="right-3 bottom-3 left-3 absolute bg-[var(--color-bg-1)]/75 transform transition-all duration-400 backdrop-blur-sm p-3 rounded-sm text-center">
              <h2 class="!text-base lg:!text-xl mb-1 font-semibold">
                {director.NAME.split(" ").slice(0, 2).join(" ")}
              </h2>
              <p class="!text-xs uppercase tracking-wider">
                {director.POSITION}
              </p>
            </div>
          </a>
        </div>
      ))
  }
</section>
