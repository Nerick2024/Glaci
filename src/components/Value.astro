---
import { getLangFromUrl } from "@/i18n/utils";
import { translations } from "@/i18n";

const lang = getLangFromUrl(Astro.url);
const i18n = await translations[lang]();
---

<script src="../scripts/card3d.js"></script>

<div
  id="value"
  class="max-w-6xl h-full mx-auto flex flex-col gap-12 px-6 py-12"
>
  <h1
    data-aos="fade-up"
    data-aos-duration="1000"
    class="mt-4 title-text text-center lg:text-left mb-4"
  >
    <span class="decoration text-[var(--color-title)]">+</span>
    {i18n.VALUE.TITLE}
  </h1>

  <p data-aos="fade-in" data-aos-duration="1000" class="text-center">
    {i18n.VALUE.SUBTITLE}
  </p>

  <!-- Value Items Flex -->
  <div class="flex flex-wrap justify-center gap-6">
    {
      i18n.VALUE.ITEMS.map((item, index) => (
        <div
          data-aos="zoom-in"
          data-aos-duration="1000"
          data-aos-delay={index * 150}
          class="w-full md:w-[calc(50%-12px)] lg:w-[calc(33.333%-16px)] flex"
        >
          <div class="value-card relative flex justify-center items-center glass-effect border border-white/25 bg-gradient-to-br from-[var(--color-bg-2)]/30 to-transparent p-6 rounded-lg hover:pl-8 transition-all duration-300 flex-1 group">
            <div class="absolute left-0 top-1/2 -translate-y-1/2 w-1 h-2/3 bg-[var(--color-title)] rounded-full opacity-60 group-hover:opacity-100 group-hover:h-full transition-all duration-300" />

            <div class="flex items-center justify-center gap-4">
              <div class="flex flex-shrink-0 justify-center items-center shadow-inner border border-white/15 rounded-lg w-16 h-16 transition-transform duration-300">
                <img
                  src={item.ICON}
                  alt={item.TITLE}
                  class="w-10 object-contain"
                />
              </div>
              <p>{item.TITLE}</p>
            </div>
          </div>
        </div>
      ))
    }
  </div>

  <!-- Central Message Section -->
  <div class="relative mt-16 min-h-[200px]">
    <!-- Animated background particles -->
    <canvas
      id="value-particles"
      class="absolute inset-0 pointer-events-none w-full h-full"
      width="800"
      height="200"></canvas>

    <div class="relative z-10 text-center space-y-6">
      <div class="relative inline-block">
        <p
          data-aos="fade-in"
          data-aos-duration="1000"
          data-aos-delay="700"
          class="mb-2"
        >
          {i18n.VALUE.TEXT}
        </p>
        <div
          data-aos="fade-in"
          data-aos-duration="1000"
          data-aos-delay="600"
          class="absolute -bottom-2 left-0 right-0 h-0.5 bg-gradient-to-r from-transparent via-[var(--color-title)] to-transparent"
        >
        </div>
      </div>

      <h2
        data-aos="zoom-in"
        data-aos-duration="1000"
        data-aos-delay="1000"
        class=" lg:!text-5xl"
      >
        {i18n.VALUE.TEXT_2}
      </h2>
    </div>
  </div>
</div>
