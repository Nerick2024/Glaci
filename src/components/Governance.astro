---
import { getLangFromUrl } from "@/i18n/utils";
import { translations } from "@/i18n";

const lang = getLangFromUrl(Astro.url);
const i18n = await translations[lang]();
---

<div
  id="governance"
  class="max-w-6xl h-full mx-auto flex flex-col gap-12 px-6 py-12 my-12"
>
  <h1 class="title-text text-center lg:text-left">
    <span class="decoration text-[var(--color-title)]">+</span>
    {i18n.GOVERNANCE.TITLE_1}
  </h1>
  <p class="text-center text-[var(--color-title)] shadow-white">
    {i18n.GOVERNANCE.SUBTITLE}
  </p>
  <p class="text-center">{i18n.GOVERNANCE.TEXT_1}</p>

  <h1 class="title-text text-center lg:text-left">
    <span class="decoration text-[var(--color-title)]">+</span>
    {i18n.GOVERNANCE.TITLE_2}
  </h1>
  <p class="text-center text-[var(--color-title)] shadow-white">
    {i18n.GOVERNANCE.TEXT_2_1}
  </p>
  <div class="flex flex-col lg:flex-row gap-5 items-center justify-center">
    {
      i18n.GOVERNANCE.CARDS.map((card) => (
        <div class="w-full bg-white/8 relative border border-white/25 rounded-xl flex hover:-translate-y-2 transition-transform duration-300 p-4 items-center justify-start">
          <div class="border border-white/15 bg-black/5 h-18 aspect-square rounded-lg p-3">
            <img
              src={card.ICON}
              alt={card.TITLE}
              loading="lazy"
              class="w-full h-full object-contain"
            />
          </div>
          <p class="px-4   text-center lg:text-left">{card.TITLE}</p>
          <div class="absolute left-1/2 -translate-1/2 -bottom-1 h-1 w-2/3 bg-[var(--color-title)] rounded-full" />
        </div>
      ))
    }
  </div>
  <p class="text-center">{i18n.GOVERNANCE.TEXT_2_2}</p>
  <div class="flex flex-col lg:flex-row gap-12">
    <div class="w-full lg:w-1/2">
      <h1 class="title-text text-center lg:text-left">
        <span class="decoration text-[var(--color-title)]">+</span>
        {i18n.GOVERNANCE.TITLE_3}
      </h1>
      <ul class="space-y-4 pl-5 lg:pl-10">
        {
          i18n.GOVERNANCE.ITEMS.map((value) => (
            <li
              data-aos-delay="200"
              data-aos="fade-left"
              data-aos-duration="1000"
              class="flex items-center gap-3"
            >
              <span
                class="rounded-full w-3 h-3"
                style="background-color: var(--color-title);"
              />
              {value}
            </li>
          ))
        }
      </ul>
    </div>
    <div class="w-full lg:w-1/2">
      <h1 class="title-text text-center lg:text-left">
        <span class="decoration text-[var(--color-title)]">+</span>
        {i18n.GOVERNANCE.TITLE_4}
      </h1>
      <p class="text-center">{i18n.GOVERNANCE.TEXT_4_1}</p>
    </div>
  </div>
</div>
