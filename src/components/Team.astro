---
import { getLangFromUrl, useTranslation, slugify } from "@/i18n";
const lang = getLangFromUrl(Astro.url);
const i18n = await useTranslation(lang);
---

<section
  id="team"
  class="mx-auto my-12 min-h-screen flex flex-col items-center justify-center h-full max-w-7xl pt-24 gap-8 px-6"
>
  <h2 class="mb-8 font-bold text-4xl text-center text-white">
    {i18n.TEAM.TITLE}
  </h2>
  <div class="flex flex-wrap items-center justify-center gap-8">
    {
      i18n.TEAM.TEAM.map((director) => (
        <div data-aos="zoom-in">
          <a
            href={`/${lang}/our-team/${slugify(director.NAME)}`}
            class="group relative block h-full lg:w-70 aspect-square overflow-hidden rounded-sm bg-gradient-to-t from-gray-400 to-white shadow-lg transition-transform duration-300 hover:scale-105"
          >
            <img
              src={director.IMG}
              alt={director.NAME}
              class="w-full h-full object-contain grayscale-100 pointer-events-none"
            />
            <div class="right-3 bottom-3 left-3 absolute bg-[var(--color-bg-1)]/75 backdrop-blur-sm p-3 rounded-sm text-white text-center">
              <h3 class="mb-1 font-semibold text-base">{director.NAME}</h3>
              <p class="text-xs uppercase tracking-wider">
                {director.POSITION}
              </p>
            </div>
          </a>
        </div>
      ))
    }
  </div>
</section>
