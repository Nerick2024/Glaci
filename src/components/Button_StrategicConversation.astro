---
const { lang, i18n } = Astro.props;
---

<a
  href={`/${lang}/#contact`}
  class="group relative flex flex-row hover:scale-110 bg-white hover:bg-[var(--color-title)] z-10 items-center justify-between gap-2 p-2 px-4 text-[var(--color-blue)] hover:text-white border border-white/75 rounded-full overflow-hidden font-semibold transition-all duration-500"
>
  {i18n.HERO.BUTTON_STRATEGIC_CONVERSATION}
  <span class="bg-white px-4 py-1 rounded-full">
    <svg
      xmlns="http://www.w3.org/2000/svg"
      class="fill-[var(--color-blue)] group-hover:fill-[var(--color-title)] group-hover:animate-bounce h-5.5 rotate-90 transition-all duration-300 pointer-events-none"
      viewBox="0 0 16 16"
    >
      <path
        fill-rule="evenodd"
        d="M8 15a.5.5 0 0 0 .5-.5V2.707l3.146 3.147a.5.5 0 0 0 .708-.708l-4-4a.5.5 0 0 0-.708 0l-4 4a.5.5 0 1 0 .708.708L7.5 2.707V14.5a.5.5 0 0 0 .5.5"
      ></path>
    </svg>
  </span>
</a>
<style>
  /* asegúrate de que el enlace tenga posición relativa (ya la tienes en la clase) */
  a.group {
    position: relative;
    overflow: hidden; /* evita que el brillo se salga */
  }

  a.group::after {
    content: "";
    position: absolute;
    top: 0;
    left: 0;
    width: 160%;
    height: 100%;
    background: linear-gradient(
      90deg,
      transparent,
      rgba(255, 255, 255, 0.5),
      transparent
    );
    transform: translateX(-100%);
    pointer-events: none;
    will-change: transform, opacity;
    opacity: 0;
  }

  a.group:hover::after,
  a.group:focus::after {
    animation: shine 1s linear infinite;
    opacity: 1;
  }

  @keyframes shine {
    0%   { transform: translateX(-100%); opacity: 0; }
    10%  { opacity: 1; }
    50%  { transform: translateX(40%); opacity: 1; }
    100% { transform: translateX(200%); opacity: 0; }
  }
</style>

