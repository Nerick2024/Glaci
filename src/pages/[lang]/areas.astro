---
import { getLangFromUrl } from "@/i18n/utils";
import { translations } from "@/i18n";
import ButtonMoreInformation from "@/components/Button_MoreInformation.astro";
import Layout from "@/layouts/Layout.astro";
import SolutionAreasOfImpact from "@/components/Solution_AreasOfImpact.astro";

export function getStaticPaths() {
