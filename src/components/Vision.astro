---
import { getLangFromUrl } from "@/i18n/utils";
import { translations } from "@/i18n";

const lang = getLangFromUrl(Astro.url);
const i18n = await translations[lang]();
---

<script src="../scripts/card3d.js"></script>

<div
  id="vision"
  class="max-w-6xl h-full mx-auto flex flex-col gap-12 p-6"
>
  <h1
    data-aos="fade-up"
    data-aos-duration="1000"
    class="title-text text-center lg:text-left"
  >
    <span class="decoration text-[var(--color-title)]">+</span>
    {i18n.VISION.TITLE}
  </h1>

  <div class="max-w-4xl mx-auto lg:mx-0 text-center lg:text-left">
    <p
      data-aos="fade-up"
      data-aos-duration="1000"
      class="/90"
      set:html={i18n.VISION.TEXT}
    />
  </div>

  <!-- Cards grid: if translations include VISION.CARDS render them, otherwise render nothing -->
  {
    i18n.VISION.CARDS && i18n.VISION.CARDS.length ? (
      <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4 gap-6">
        {i18n.VISION.CARDS.map((card, index) => (
          <div
            data-aos="zoom-in"
            data-aos-duration="1000"
            data-aos-delay={index * 100}
            class="flex card-3d-wrapper"
          >
            <div class="card-3d relative glass-effect bg-white/5 backdrop-blur-sm border border-white/25 p-6 rounded-lg transition-all duration-300 shadow-lg flex-1 group">
              <div class="flex flex-col items-center text-center space-y-4">
                <div class="flex flex-shrink-0 justify-center items-center shadow-inner border border-white/15 rounded-lg w-16 h-16 transition-transform duration-300">
                  {card.ICON ? (
                    <img
                      src={card.ICON}
                      alt={card.TITLE}
                      class="w-10 object-contain"
                    />
                  ) : (
                    <div class="text-[var(--color-title)]  ">+</div>
                  )}
                </div>
                <p class=" font-medium/90 group-hover: transition-colors duration-300 leading-tight">
                  {card.TITLE}
                </p>
              </div>
                <div class="absolute -bottom-0.5 left-1/2 -translate-x-1/2 w-2/3 h-1 bg-[linear-gradient(to_right,transparent,var(--color-title),transparent)]" />
            </div>
          </div>
        ))}
      </div>
    ) : null
  }
</div>

<style>
  .card-3d {
    transform-style: preserve-3d;
    transition: transform 0.3s ease-out;
    position: relative;
    overflow: hidden;
  }

  .card-3d::before {
    content: "";
    position: absolute;
    top: -150%;
    left: -150%;
    width: 400%;
    height: 400%;
    background: linear-gradient(
      var(--angle, 115deg),
      transparent 30%,
      rgba(255, 255, 255, 0.04) 47%,
      rgba(255, 255, 255, 0.07) 50%,
      rgba(255, 255, 255, 0.04) 53%,
      transparent 70%
    );
    opacity: 0;
    transition: opacity 0.3s ease;
    pointer-events: none;
    z-index: 1;
  }

  .card-3d:hover::before {
    opacity: 1;
  }

  .card-3d > :first-child {
    position: relative;
    z-index: 2;
  }
</style>
