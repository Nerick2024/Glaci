---
import { getLangFromUrl, useTranslation } from "@/i18n";
import { translations } from "@/i18n/config";

import Layout from "@/layouts/Layout.astro";

import About from "@/components/About.astro";
import Contact from "@/components/Contact.astro";
import Hero from "@/components/Hero.astro";
import Information from "@/components/Information.astro";
import AreasOfImpact from "@/components/AreasOfImpact.astro";
import Glaci from "@/components/Glaci.astro";
import Work from "@/components/Work.astro";
import Governance from "@/components/Governance.astro";
import Consortium from "@/components/Consortium.astro";
import Stars from "@/components/Stars.astro";
import Methodology from "@/components/Methodology.astro";

export function getStaticPaths() {
  return Object.keys(translations).map((lang) => ({ params: { lang } }));
}

const lang = getLangFromUrl(Astro.url);

const t = await useTranslation(lang);
---

<Layout title="G L A C I">
  <Hero />
  <div class="h-full w-full fixed top-0 left-0 -z-20 pointer-events-none">
    <Stars />
  </div>
  <Glaci />
  <Consortium />
  <AreasOfImpact />
  <Methodology />
  <Work />
</Layout>
