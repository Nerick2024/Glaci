---
import { getLangFromUrl, useTranslation, slugify } from "@/i18n";
import Button_MoreInformation from "@/components/Button_MoreInformation.astro";
import Stars from "./Stars.astro";
const lang = getLangFromUrl(Astro.url);
const i18n = await useTranslation(lang);
---

<section
  id="team"
  class="mx-auto my-12 min-h-screen flex flex-col h-full w-full pt-24 gap-8"
>
  <h1
    data-aos="fade-up"
    data-aos-duration="1000"
    class="mt-4 font-normal max-w-7xl mx-auto text-[32px] text-white md:text-[45px] text-left mb-4"
  >
    <span class="text-[var(--color-title)]">+</span>
    {i18n.TEAM.TITLE}
  </h1>
  <div
    class="flex flex-col items-center justify-center mx-auto text-white max-w-7xl px-6 gap-8 mb-12"
  >
    <p
      data-aos="fade-in"
      data-aos-duration="1000"
      class="text-center lg:text-left text-4xl font-semibold text-[var(--color-title)]"
    >
      {i18n.TEAM.SUBTITLE}
    </p>
    <p
      data-aos="fade-in"
      data-aos-duration="1000"
      class="text-center lg:text-left text-lg"
    >
      {i18n.TEAM.TEXT}
    </p>
    <div
      class="grid grid-cols-1 md:grid-cols-2 gap-10 items-center justify-center max-w-4xl my-8"
    >
      {
        i18n.TEAM.CARDS.map((card) => (
          <div
            data-aos="zoom-in-up"
            data-aos-duration="1000"
            class="glass-effect border border-white/25 rounded-xl flex p-4 items-center justify-start"
          >
            <div class="border border-white/15 bg-black/5 h-18 aspect-square rounded-lg p-3">
              <img
                src={card.ICON}
                alt={card.TEXT}
                loading="lazy"
                class="w-full h-full object-contain"
              />
            </div>
            <p class="px-4 text-xl font-semibold text-center lg:text-left">
              {card.TEXT}
            </p>
            <div class="absolute left-1/2 -translate-1/2 -bottom-1 h-1 w-2/3 bg-[var(--color-title)] rounded-full" />
          </div>
        ))
      }
    </div>
    <p
      data-aos="fade-in"
      data-aos-duration="1000"
      class="text-center lg:text-left text-lg"
    >
      {i18n.TEAM.TEXT_2}
    </p>
    <div data-aos="fade-up" data-aos-duration="1000">
      <Button_MoreInformation i18n={i18n} lang={lang} />
    </div>
  </div>
  <div
    class="flex flex-wrap items-center justify-center gap-8 max-w-7xl mx-auto mt-12 px-6"
  >
    {
      i18n.TEAM.TEAM.slice()
          .sort((a, b) => {
            const key = (name : any) => {
              const parts = name.split(/\s+/).filter(Boolean);
              return parts[1] ?? parts[0] ?? name;
            };
            return key(a.NAME).localeCompare(key(b.NAME), lang, { sensitivity: "base" });
          })
        .map((director) => (
          <div data-aos="zoom-in" data-aos-duration="1000">
            <a
              href={`/${lang}/our-team/${slugify(director.NAME)}`}
              class="group relative block h-full lg:w-70 aspect-square overflow-hidden rounded-sm bg-gradient-to-t from-gray-400 to-white transition-all duration-300 hover:scale-105"
            >
              <img
                src={director.IMG}
                alt={director.NAME}
                class="w-full h-full object-contain pointer-events-none"
              />
              <div class="right-3 bottom-3 left-3 absolute bg-[var(--color-bg-1)]/75 transform transition-all duration-400 backdrop-blur-sm p-3 rounded-sm text-white text-center">
                <h3 class="mb-1 font-semibold text-base">
                  {director.NAME.split(" ").slice(0, 2).join(" ")}
                </h3>
                <p class="text-xs uppercase tracking-wider">
                  {director.POSITION}
                </p>
              </div>
            </a>
          </div>
        ))
    }
  </div>
</section>
