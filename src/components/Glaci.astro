---
import { getLangFromUrl } from "@/i18n/utils";
import { translations } from "@/i18n";

const lang = getLangFromUrl(Astro.url);
const i18n = await translations[lang]();
---

<div class="border-white/25 border-t"></div>
<div
  id="about"
  class="max-w-6xl h-full text-white mx-auto flex flex-col gap-6 px-6 py-12"
>
  <h1
    data-aos="fade-up"
    data-aos-duration="1000"
    class="mt-4 font-normal text-[32px] text-white md:text-[45px] text-center lg:text-left mb-4"
  >
    <span class="text-[var(--color-title)]">+</span>
    {i18n.GLACI.TITLE}
    <span
      class="text-white font-bold hover:text-[var(--color-title)] transition-colors"
      >{i18n.GLACI.GLACI}</span
    >
  </h1>
  <div
    class="gap-10 lg:gap-16 p-5 flex flex-wrap lg:flex-row items-start justify-center"
  >
    <p
      data-aos="fade-right"
      data-aos-duration="1000"
      class="text-center lg:text-left text-lg flex-1"
    >
      {i18n.GLACI.TEXT_1}
    </p>
    <p
      data-aos="fade-left"
      data-aos-duration="1000"
      class="text-center lg:text-left text-lg flex-1"
    >
      {i18n.GLACI.TEXT_2}
    </p>
  </div>
  <div
    class="mb-12 gap-10 lg:gap-16 p-5 flex flex-col lg:flex-row items-start justify-center"
  >
    <p
      data-aos="fade-right"
      data-aos-duration="1000"
      class="text-center lg:text-left text-lg flex-1"
    >
      {i18n.HERO.TEXT_3}
    </p>
    <p
      data-aos="fade-left"
      data-aos-duration="1000"
      class="text-center lg:text-left text-lg flex-1"
    >
      {i18n.HERO.TEXT_4}
    </p>
  </div>
</div>
