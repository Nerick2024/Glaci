---
import "../styles/globals.css";
import Navbar from "@/components/Navbar.astro";
import Footer from "@/components/Footer.astro";
import { getLangFromUrl } from "@/i18n";
import Stars from "@/components/Stars.astro";
const lang = getLangFromUrl(Astro.url);
export interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang={lang}>
  <head>
    <meta charset="UTF-8" />
    <meta
      name="description"
      content="GLACI - Grupo Global de Ciudades Inteligentes, se dedica a impulsar la transformación de las ciudades en ecosistemas tecnológicos y sostenibles, centrados en el bienestar y la calidad de vida de sus habitantes a través de la innovación."
    />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/webp" href="/logo/icon.ico" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body class="flex flex-col gap-y-36">
    <Navbar />
    <slot />
    <div class="h-full w-full fixed top-0 left-0 -z-20 pointer-events-none">
      <Stars />
    </div>
    <Footer />
  </body>
</html>
<script type="">
  import AOS from "aos";
  import "aos/dist/aos.css";

  document.addEventListener("DOMContentLoaded", function () {
    AOS.init();
  });
</script>
<style is:global>
  @import url("https://fonts.googleapis.com/css2?family=Google+Sans:ital,opsz,wght@0,17..18,400..700;1,17..18,400..700&family=Inter:ital,opsz,wght@0,14..32,100..900;1,14..32,100..900&family=Public+Sans:ital,wght@0,100..900;1,100..900&display=swap");
  @import url("https://fonts.googleapis.com/css2?family=Inter:ital,opsz,wght@0,14..32,100..900;1,14..32,100..900&family=Public+Sans:ital,wght@0,100..900;1,100..900&display=swap");
  :root {
    --color-title: #00ffff;
    --color-text: #ffff;
    --color-text2: #d5d5d5;
    --color-blue: #000c2e;
    --color-bg-1: #000c2e;
    --color-bg-2: #011377;
    --color-bg-light-gradient: #000459;
    --color-bg-dropdown: rgba(0, 3, 68, 0.6);
    --color-world: #009bdd;
  }
  html,
  body {
    overflow-x: hidden;
  }

  html {
    background-color: var(--color-bg-1);
    scroll-behavior: smooth;
    scroll-padding-top: 100px;
    color: white;
  }

  .glass-effect {
    background-color: rgba(255, 255, 255, 0.06);
    border-top: 1px solid rgba(255, 255, 255, 0.25);
    border-bottom: 1px solid rgba(255, 255, 255, 0.25);
    backdrop-filter: blur(5px);
  }

  .shadow-white {
    text-shadow:
      0 1px rgb(31, 84, 99),
      0 2px rgb(31, 84, 99),
      0 3px rgb(31, 84, 99),
      0 4px rgb(31, 84, 99),
      0 5px rgb(31, 84, 99);
  }

  /* Breakpoints:
   sm: up to 767.98px
   md: 768px — 1023.98px
   lg: 1024px and up (tus valores originales)
*/

  /* SM (móvil) */
  @media (max-width: 767.98px) {
    /* TÍTULOS */
    h1 {
      font-family: "Google Sans", sans-serif;
      font-size: 2rem;
      font-weight: 800;
      line-height: 1.05;
    }

    /* SUBTÍTULOS */
    h2 {
      font-family: "Google Sans", sans-serif;
      font-size: 1.9rem;
      font-weight: 600;
      line-height: 1;
    }

    /* TEXTO NORMAL */
    p,
    span,
    li,
    a,
    button,
    input,
    textarea {
      font-family: "Inter", sans-serif;
      font-size: 1rem;
    }

    .title-text {
      font-size: 2.4rem;
      font-weight: 400;
      margin-top: 2rem !important;
      margin-bottom: 2rem !important;
    }

    .decoration {
      font-size: 2.4rem;
      font-weight: 400;
    }

    .smart-ecosystem-title {
      font-family: "Google Sans", sans-serif;
      font-size: 1.75rem;
      font-weight: 800;
      line-height: 1;
    }
  }

  /* MD (tableta) */
  @media (min-width: 768px) and (max-width: 1023.98px) {
    /* TÍTULOS */
    h1 {
      font-family: "Google Sans", sans-serif;
      font-size: 2.25rem;
      font-weight: 800;
      line-height: 1.02;
    }

    /* SUBTÍTULOS */
    h2 {
      font-family: "Google Sans", sans-serif;
      font-size: 1.8rem;
      font-weight: 600;
      line-height: 0.98;
    }

    /* TEXTO NORMAL */
    p,
    span,
    li,
    a,
    button,
    input,
    textarea {
      font-family: "Inter", sans-serif;
      font-size: 1.05rem;
    }

    .title-text {
      font-size: 3rem;
      font-weight: 400;
      margin-top: 2rem !important;
      margin-bottom: 2rem !important;
    }

    .decoration {
      font-size: 3.2rem;
      font-weight: 400;
    }

    .smart-ecosystem-title {
      font-family: "Google Sans", sans-serif;
      font-size: 2.25rem;
      font-weight: 800;
      line-height: 0.98;
    }
  }

  /* LG */
  @media (min-width: 1024px) {
    /* TÍTULOS */
    h1 {
      font-family: "Google Sans", sans-serif;
      font-size: 2.75rem;
      font-weight: 800;
      line-height: 1;
    }

    /* SUBTÍTULOS */
    h2 {
      font-family: "Google Sans", sans-serif;
      font-size: 2.1rem;
      font-weight: 600;
      line-height: 0.95;
    }

    /* TEXTO NORMAL */
    p,
    span,
    li,
    a,
    button,
    input,
    textarea {
      font-family: "Inter", sans-serif;
      font-size: 1.2rem;
    }

    .title-text {
      font-size: 3.75rem;
      font-weight: 400;
      margin-top: 2rem !important;
      margin-bottom: 2rem !important;
    }

    .decoration {
      font-size: 4rem;
      font-weight: 400;
    }

    .smart-ecosystem-title {
      font-family: "Google Sans", sans-serif;
      font-size: 2.75rem;
      font-weight: 800;
      line-height: 0.95;
    }
  }
</style>
