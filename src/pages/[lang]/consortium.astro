---
import { getLangFromUrl } from "@/i18n/utils";
import { translations } from "@/i18n";
import ButtonMoreInformation from "@/components/Button_MoreInformation.astro";
import Layout from "@/layouts/Layout.astro";
import Stars from "@/components/Stars.astro";

export function getStaticPaths() {
  return Object.keys(translations).map((lang) => ({ params: { lang } }));
}

const lang = getLangFromUrl(Astro.url);
const i18n = await translations[lang]();
---

<Layout title="G L A C I">
  <div
    id="consortium"
    class="max-w-6xl min-h-screen h-full flex items-start justify-center text-white mx-auto flex-col gap-6 px-6 py-12"
  >
    <h1
      data-aos="fade-up"
      data-aos-duration="1000"
      class="mt-4 font-normal text-[32px] text-white md:text-[45px] text-left mb-4"
    >
      <span class="text-[var(--color-title)]">+</span>
      {i18n.CONSORTIUM.TITLE}
    </h1>
    <div class="flex flex-row gap-6">
      <p
        data-aos="zoom-out"
        data-aos-duration="1000"
        class="text-xl lg:text-4xl text-white font-bold lg:text-left"
      >
        {i18n.CONSORTIUM.TEXT}
      </p>
    </div>
    <div
      class="gap-10 lg:gap-16 py-10 flex flex-col lg:flex-row items-center lg:items-start justify-center w-full mx-auto"
    >
      <p
        data-aos="fade-right"
        data-aos-duration="1000"
        class="text-center lg:text-left text-xl lg:text-3xl flex-1 text-[var(--color-title)] font-bold"
      >
        {i18n.CONSORTIUM.TEXT_2}
      </p>
      <p
        data-aos="fade-left"
        data-aos-duration="1000"
        class="text-center lg:text-left text-xl lg:text-3xl flex-1 text-[var(--color-title)] font-bold"
      >
        {i18n.CONSORTIUM.TEXT_3}
      </p>
    </div>
    <div data-aos="zoom-in" data-aos-duration="1000" class="w-fit mx-auto my-8">
      <ButtonMoreInformation lang={lang} i18n={i18n} />
    </div>
  </div>
</Layout>
