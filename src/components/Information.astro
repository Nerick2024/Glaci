---
import "../styles/nuevo.css";
import { getLangFromUrl, useTranslation, translatedPathFor } from "@/i18n";
const lang = getLangFromUrl(Astro.url);
const i18n = await useTranslation(lang);
---
<div id="somos" class="px-4 md:px-8 py-16 text-white">
    <div class="items-start gap-16 grid md:grid-cols-2 mx-auto max-w-7xl">
      
      <!-- Left Column: Misi贸n & Visi贸n -->
      <div class="flex flex-col justify-center items-center gap-12">
        <!-- Misi贸n -->
        <div data-aos="fade-right">
          <div class="flex items-center gap-4 mb-4">
            <img src="/icons/mission.svg" alt={i18n.INFORMATION.MISSION_TITLE} class="w-10 h-10"/>
            <h2 class="text-[var(--color-title)] text-3xl">{i18n.INFORMATION.MISSION_TITLE}</h2>
          </div>
          <p class="text-lg">
            {i18n.INFORMATION.MISSION_TEXT}
          </p>
        </div>
        
        <!-- Visi贸n -->
        <div data-aos="fade-right" data-aos-delay="200">
          <div class="flex items-center gap-4 mb-4">
            <img src="/icons/vission.svg" alt={i18n.INFORMATION.VISION_TITLE} class="w-10 h-10"/>
            <h2 class="text-[var(--color-title)] text-3xl">{i18n.INFORMATION.VISION_TITLE}</h2>
          </div>
          <p class="text-lg">
            {i18n.INFORMATION.VISION_TEXT}
          </p>
        </div>
      </div>
      
      <!-- Right Column: Valores -->
      <div class="flex justify-center items-center md:pl-12 md:border-white/25 md:border-l">
        <div data-aos="fade-left">
          <div class="flex items-center gap-4 mb-4">
            <img src="/icons/valores.svg" alt={i18n.INFORMATION.VALUES_TITLE} class="w-10 h-10"/>
            <h2 class="text-[var(--color-title)] text-3xl">{i18n.INFORMATION.VALUES_TITLE}</h2>
          </div>
          <ul class="space-y-4 text-lg pl-5 lg:pl-10">
            {i18n.INFORMATION.VALUES_LIST.map(value => (
              <li data-aos-delay="200" data-aos="fade-left" data-aos-duration="1000" class="flex items-center gap-3"><span class="rounded-full w-3 h-3" style="background-color: var(--color-title);"></span>{value}</li>
            ))}
          </ul>
        </div>
      </div>
  
    </div>
  </div>