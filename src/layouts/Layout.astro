---
import "../styles/globals.css";
import Navbar from "@/components/Navbar.astro";
import Footer from "@/components/Footer.astro";
import { getLangFromUrl } from "@/i18n";
const lang = getLangFromUrl(Astro.url);
export interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang={lang}>
  <head>
    <meta charset="UTF-8" />
    <meta
      name="description"
      content="GLACI - Grupo Global de Ciudades Inteligentes, se dedica a impulsar la transformación de las ciudades en ecosistemas tecnológicos y sostenibles, centrados en el bienestar y la calidad de vida de sus habitantes a través de la innovación."
    />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/webp" href="/logo/icon.ico" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body>
    <Navbar />
    <slot />
    <Footer />
  </body>
</html>
<script type="">
  import AOS from "aos";
  import "aos/dist/aos.css";

  document.addEventListener("DOMContentLoaded", function () {
    AOS.init();
  });
</script>
<style is:global>
  @import url("https://fonts.googleapis.com/css?family=Montserrat:300,900|Titillium+Web:400,600,700&display=swap");

  :root {
    --color-title: #b6b6b6;
    --color-text: #ffff;
    --color-text2: #bebebe;
    --color-blue: #747474;
    --color-bg-1: #000000;
    --color-bg-2: #011377;
    --color-bg-3: #050653;
    --color-bg-dropdown: #343434;
  }
  html,
  body {
    font-family: "Titillium Web", sans-serif;
    overflow-x: hidden;
  }

  html {
    background-color: var(--color-bg-1);
    scroll-behavior: smooth;
  }
  /* TÍTULOS */
  h1,
  h2 {
    font-family: "Montserrat", sans-serif;
  }
  .text-metal {
    font-weight: 900;
    background: linear-gradient(
      110deg,
      #b8bdc2 0%,
      #9aa0a6 20%,
      #7d8389 35%,

      rgba(255, 255, 255, 0.95) 45%,
      rgba(255, 255, 255, 0.95) 48%,

      #7d8389 52%,
      #9aa0a6 68%,
      #b8bdc2 100%
    );

    background-size: 450% 450%;
    animation: metal-shine 9s ease-in-out infinite alternate;

    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
    filter: brightness(1.25);

    text-shadow: 0 1px 1px rgba(0, 0, 0, 0.25);
  }

  @keyframes metal-shine {
    0%,
    70% {
      background-position: 0% 50%;
    }
    85% {
      background-position: 100% 50%;
    }
    100% {
      background-position: 100% 50%;
    }
  }

  /* TEXTO NORMAL */
  h3,
  h4,
  h5,
  h6p,
  span,
  li,
  a,
  button,
  input,
  textarea {
    font-family: "Titillium Web", sans-serif;
  }
</style>
