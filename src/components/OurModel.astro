---
import { getLangFromUrl } from "@/i18n/utils";
import { translations } from "@/i18n";
import Button_MoreInformation from "./Button_MoreInformation.astro";

const lang = getLangFromUrl(Astro.url);
const i18n = await translations[lang]();
---

<div
  id="our-model"
  class="max-w-6xl h-full text-white mx-auto flex flex-col gap-12 px-6 py-12"
>
  <h1
    data-aos="fade-up"
    data-aos-duration="1000"
    class="mt-4 font-normal text-[32px] text-white md:text-[45px] text-center lg:text-left mb-4"
  >
    <span class="text-[var(--color-title)]">+</span>
    {i18n.OUR_MODEL.TITLE}
  </h1>

  <!-- Timeline Horizontal Desktop -->
  <div class="hidden lg:block relative mt-12">
    <!-- Línea horizontal -->
    <div class="mb-18 left-0 right-0 h-0.5 bg-gradient-to-r from-[var(--color-title)] via-white/30 to-[var(--color-title)]"></div>

    <!-- Cards horizontales -->
    <div class="grid grid-cols-4 gap-6">
      {
        i18n.OUR_MODEL.MODELS.map((model, index) => (
          <div
            data-aos="fade-up"
            data-aos-duration="1000"
            data-aos-delay={index * 200}
            class="relative"
          >
            <div class="absolute -top-25 left-1/2 -translate-x-1/2 z-10 flex items-center justify-center w-12 h-12 rounded-full bg-[var(--color-bg-1)] border-2 border-[var(--color-title)] shadow-[0_0_20px_rgba(0,187,255,0.5)]">
              <span class="text-lg font-bold text-[var(--color-title)]">
                0{index + 1}
              </span>
            </div>

            <div class="glass-effect border h-full border-white/25 p-6 rounded-lg hover:-translate-y-2 transition-transform duration-300 relative">
              {model.ICON && (
                <div class="w-12 h-12 mb-4 flex items-center justify-center">
                  <img src={model.ICON} alt={model.TITLE} class="w-full h-full object-contain" />
                </div>
              )}
              <h3 class="text-xl font-semibold text-[var(--color-title)] mb-3">
                {model.TITLE}
              </h3>
              <p class="text-sm leading-relaxed">{model.DESCRIPTION}</p>
              <div class="absolute -bottom-0.5 left-1/2 -translate-x-1/2 w-2/3 h-1 bg-[var(--color-title)] rounded-full" />
            </div>
          </div>
        ))
      }
    </div>
  </div>

  <!-- Timeline Mobile -->
  <div class="lg:hidden relative mt-8">
    <div class="space-y-6">
      {
        i18n.OUR_MODEL.MODELS.map((model, index) => (
          <div
            data-aos="fade-up"
            data-aos-duration="1000"
            data-aos-delay={index * 150}
            class="relative"
          >
            <div class="glass-effect border border-white/25 p-5 rounded-lg relative">
              <div class="flex items-start gap-4 mb-3">
                <div class="flex-shrink-0 flex items-center justify-center w-12 h-12 rounded-full bg-[var(--color-bg-1)] border-2 border-[var(--color-title)] shadow-[0_0_15px_rgba(0,187,255,0.4)]">
                  <span class="text-lg font-bold text-[var(--color-title)]">
                    0{index + 1}
                  </span>
                </div>
                {model.ICON && (
                  <div class="w-10 h-10 flex items-center justify-center">
                    <img src={model.ICON} alt={model.TITLE} class="w-full h-full object-contain" />
                  </div>
                )}
              </div>
              <h3 class="text-xl font-semibold text-[var(--color-title)] mb-2">
                {model.TITLE}
              </h3>
              <p class="text-sm leading-relaxed">{model.DESCRIPTION}</p>
              <div class="absolute -bottom-0.5 left-1/2 -translate-x-1/2 w-2/3 h-1 bg-[var(--color-title)] rounded-full" />
            </div>
          </div>
        ))
      }
    </div>
  </div>

  <!-- Textos animados con partículas -->
  <div class="relative h-48 flex items-center justify-center mt-8 py-12">
    <canvas
      id="particles-canvas"
      class="absolute pointer-events-none"
      style="left: -100px; right: -100px; top: -50px; bottom: -50px; width: calc(100% + 200px); height: calc(100% + 100px);"
    ></canvas>
    <div
      id="rotating-texts"
      class="relative z-10 flex items-center justify-center w-full"
    >
      {
        i18n.OUR_MODEL.TEXT.map((text, index) => (
          <p
            class={`rotating-text absolute text-center shadow-text text-3xl lg:text-5xl font-bold px-4 text-white ${index === 0 ? "active" : ""}`}
            data-index={index}
            set:html={text}
          />
        ))
      }
    </div>
  </div>

  <!-- <div data-aos="fade-up" data-aos-duration="1000" class="w-fit mx-auto mt-4">
    <Button_MoreInformation lang={lang} i18n={i18n} />
  </div> -->
</div>

<style>
  #particles-canvas {
    z-index: 1;
  }

  .rotating-text {
    opacity: 0;
    transform: scale(0.8);
    transition: all 1s cubic-bezier(0.4, 0, 0.2, 1);
    position: absolute;
    z-index: 10;
  }

  .rotating-text.active {
    opacity: 1;
    transform: scale(1);
    text-shadow:
      0 0 10px rgba(0, 187, 255, 0.5),
      0 0 20px rgba(0, 187, 255, 0.3),
      0 0 30px rgba(40, 198, 255, 0.4);
  }

  .rotating-text.exit {
    opacity: 0;
    transform: scale(1.2);
  }
</style>

<script>
  document.addEventListener("DOMContentLoaded", () => {
    const texts = document.querySelectorAll(".rotating-text");
    const canvas = document.getElementById(
      "particles-canvas",
    ) as HTMLCanvasElement;
    const ctx = canvas.getContext("2d");
    let currentIndex = 0;
    let particles: Array<{
      x: number;
      y: number;
      vx: number;
      vy: number;
      life: number;
      size: number;
    }> = [];
    let burst: {
      x: number;
      y: number;
      radius: number;
      opacity: number;
    } | null = null;

    function resizeCanvas() {
      const parent = canvas.parentElement!;
      canvas.width = parent.offsetWidth + 200;
      canvas.height = parent.offsetHeight + 100;
    }
    resizeCanvas();

    function createParticles(element: Element) {
      const rect = element.getBoundingClientRect();
      const parent = canvas.parentElement!;
      const parentRect = parent.getBoundingClientRect();
      const centerX = rect.left - parentRect.left + rect.width / 2 + 100;
      const centerY = rect.top - parentRect.top + rect.height / 2 + 50;

      // Crear burst de resplandor
      burst = { x: centerX, y: centerY, radius: 0, opacity: 0.8 };

      for (let i = 0; i < 40; i++) {
        const angle = (Math.PI * 2 * i) / 40;
        const speed = 2 + Math.random() * 3;
        particles.push({
          x: centerX,
          y: centerY,
          vx: Math.cos(angle) * speed,
          vy: Math.sin(angle) * speed,
          life: 1,
          size: 1 + Math.random() * 1.2,
        });
      }
    }

    function animate() {
      ctx!.clearRect(0, 0, canvas.width, canvas.height);

      // Dibujar burst de resplandor
      if (burst) {
        burst.radius += 4;
        burst.opacity -= 0.015;

        if (burst.opacity > 0) {
          const gradient = ctx!.createRadialGradient(
            burst.x,
            burst.y,
            0,
            burst.x,
            burst.y,
            burst.radius,
          );
          gradient.addColorStop(
            0,
            `rgba(255, 255, 255, ${burst.opacity * 0.6})`,
          );
          gradient.addColorStop(
            0.2,
            `rgba(0, 187, 255, ${burst.opacity * 0.4})`,
          );
          gradient.addColorStop(
            0.6,
            `rgba(0, 187, 255, ${burst.opacity * 0.2})`,
          );
          gradient.addColorStop(1, "rgba(0, 187, 255, 0)");
          ctx!.fillStyle = gradient;
          ctx!.beginPath();
          ctx!.arc(burst.x, burst.y, burst.radius, 0, Math.PI * 2);
          ctx!.fill();
        } else {
          burst = null;
        }
      }

      particles = particles.filter((p) => {
        p.x += p.vx;
        p.y += p.vy;
        p.life -= 0.012;

        if (p.life > 0) {
          ctx!.shadowBlur = 25;
          ctx!.shadowColor = "#00bbff";
          ctx!.fillStyle = `rgba(0, 187, 255, ${p.life})`;
          ctx!.beginPath();
          ctx!.arc(p.x, p.y, p.size, 0, Math.PI * 2);
          ctx!.fill();

          // Halo adicional
          ctx!.shadowBlur = 35;
          ctx!.fillStyle = `rgba(0, 187, 255, ${p.life * 0.5})`;
          ctx!.beginPath();
          ctx!.arc(p.x, p.y, p.size * 1.5, 0, Math.PI * 2);
          ctx!.fill();
          return true;
        }
        return false;
      });

      requestAnimationFrame(animate);
    }

    function rotateTexts() {
      const current = texts[currentIndex];
      const next = texts[(currentIndex + 1) % texts.length];

      createParticles(current);
      current.classList.add("exit");
      current.classList.remove("active");

      setTimeout(() => {
        current.classList.remove("exit");
        next.classList.add("active");
        createParticles(next);
        currentIndex = (currentIndex + 1) % texts.length;
      }, 1000);
    }

    animate();
    setInterval(rotateTexts, 4000);
    window.addEventListener("resize", resizeCanvas);
  });
</script>
