---
import { getLangFromUrl } from "@/i18n";
import { translations } from "@/i18n/config";

import Layout from "@/layouts/Layout.astro";
import Contact from "@/components/Contact.astro";

export function getStaticPaths() {
  return Object.keys(translations).map((lang) => ({ params: { lang } }));
}

const lang = getLangFromUrl(Astro.url);
const i18n = await translations[lang]();
---

<!-- Root: bg gris suave como en la foto -->
<Layout title="G L A C I">
  <div class="min-h-screen">
    <!-- CABECERA AZUL (full width) -->
    <header class="w-full pt-36 max-w-7xl mx-auto px-6 pb-16">
          <p class="text-white font-semibold text-6xl leading-tight">
            ¿Requieres <br /> información?
          </p>
    </header>

    <section class="w-full bg-white -mt-8 pb-20">
      <div class="max-w-7xl mx-auto px-6">
        <div class="flex gap-8 h-full items-start">
          <div class="w-2/5 pt-12 px-2 flex flex-col justify-center">
              <p class="text-[var(--color-blue)] font-semibold text-3xl mb-8">
                En OM SMART <br /> estamos a tus disposición.
              </p>
              <p class="text-gray-600 mb-24 font-medium text-lg">
                Si te interesa saber más acerca del tema o si tienes alguna duda
                o sugerencia te invitamos a que llenes el formato de registro
                con datos reales para poder comunicarnos de manera correcta y
                poder brindarte las herramientas y la información que necesitas.
              </p>
              <p class="text-lg font-semibold text-[var(--color-blue)]">
                * Ten la seguridad de que tus datos se tratarán de manera
                segura.
              </p>
            </div>

          <!-- Columna derecha: tarjeta del formulario (flotando, solapando el header) -->
          <main class="w-3/5 relative">
            <!-- Card: negative margin para solapar el header (ajusta -mt según necesites) -->
            <div class="relative z-20 -mt-24">
              <div class="bg-white rounded-xl shadow-2xl p-10 px-12">
                <h3 class="text-[var(--color-blue)] font-semibold text-3xl text-center mb-4">
                  regístrate para solicitar información acerca de algún tema de
                  tu interés.
                </h3>
                <p class="text-gray-400 mb-8 text-lg text-center">
                  Tu registro nos sirve para enviarte los datos necesarios que
                  solicites.
                </p>

                <form>
                  <div class="mt-4">
                    <input
                      type="text"
                      placeholder="Nombre"
                      class="bg-gray-100 p-4 px-6 rounded-full w-full focus:outline-none"
                    />
                  </div>
                  <div class="mt-4">
                    <input
                      type="text"
                      placeholder="Cargo"
                      class="bg-gray-100 p-4 px-6 rounded-full w-full focus:outline-none"
                    />
                  </div>
                  <div class="mt-4">
                    <input
                      type="text"
                      placeholder="Empresa"
                      class="bg-gray-100 p-4 px-6 rounded-full w-full focus:outline-none"
                    />
                  </div>

                  <div class="mt-4">
                    <input
                      type="email"
                      placeholder="Mail"
                      class="bg-gray-100 p-4 px-6 rounded-full w-full focus:outline-none"
                    />
                  </div>

                  <div class="flex flex-row mt-4 items-center justify-center">
                    <p class="block text-[var(--color-blue)] w-2/5 text-lg font-semibold">
                      Tema de interés
                    </p>
                    <select
                      id="interest"
                      class="bg-gray-100 p-4 px-6 rounded-full w-full focus:outline-none"
                    >
                      <option>Economía Inteligente</option>
                    </select>
                  </div>

                  <div class="mt-4">
                    <textarea
                      placeholder="Mensaje"
                      class="bg-gray-100 p-4 rounded-xl w-full focus:outline-none"
                    ></textarea>
                  </div>

                  <div class="mt-6">
                    <button
                      type="submit"
                      class="bg-cyan-400 w-full py-4 rounded-full font-semibold text-white"
                    >
                      Enviar
                    </button>
                  </div>
                </form>
              </div>
            </div>
          </main>
        </div>
      </div>
    </section>

    <Contact />
  </div>
</Layout>
