---
import { getLangFromUrl } from "@/i18n/utils";
import { translations } from "@/i18n";

const lang = getLangFromUrl(Astro.url);
const i18n = await translations[lang]();
---

<script src="../scripts/card3d.js"></script>

<div
  id="differentiation"
  class="max-w-6xl h-full mx-auto flex flex-col gap-12 p-6"
>
  <div class="flex flex-col lg:flex-row-reverse gap-8 items-center">
    <div class="flex flex-col lg:w-1/2">
      <h1
        data-aos="fade-up"
        data-aos-duration="1000"
        class="title-text text-center lg:text-right"
      >
        {i18n.DIFFERENTIATION.TITLE}
        <span class="decoration text-[var(--color-title)]">+</span>
      </h1>
      <p
        data-aos="fade-left"
        data-aos-duration="1000"
        class="text-right mb-6 pr-5"
      >
        {i18n.DIFFERENTIATION.SUBTITLE}
      </p>
      <ul class="space-y-2 pr-5">
        {
          i18n.DIFFERENTIATION.ITEMS.map((value) => (
            <li
              data-aos-delay="200"
              data-aos="fade-left"
              data-aos-duration="1000"
              class="flex items-center text-right gap-3 justify-end"
            >
              {value}
              <span
                class="rounded-full w-3 h-3"
                style="background-color: var(--color-title);"
              />
            </li>
          ))
        }
      </ul>
    </div>

    <div
      data-aos="zoom-in"
      data-aos-duration="1000"
      class="w-full lg:w-1/2 aspect-video relative scene px-4 lg:px-0"
    >
      <div
        class="card card-2 border-2 border-[var(--color-title)] rounded-br-4xl rounded-tl-4xl"
      >
        <div class="absolute -bottom-5 -left-5 decor decor-strong">
          <svg
            xmlns="http://www.w3.org/2000/svg"
            class="w-10 h-10 text-[var(--color-title)]"
            viewBox="0 0 72 72"
          >
            <path
              fill="currentColor"
              d="M31 31V13h10v18h18v10H41v18H31V41H13V31z"></path>
            <path fill="none" d="M31 31V13h10v18h18v10H41v18H31V41H13V31z"
            ></path>
          </svg>
        </div>
        <div class="absolute -top-5 -right-5 decor decor-strong">
          <svg
            xmlns="http://www.w3.org/2000/svg"
            class="w-10 h-10 text-[var(--color-title)]"
            viewBox="0 0 72 72"
          >
            <path
              fill="currentColor"
              d="M31 31V13h10v18h18v10H41v18H31V41H13V31z"></path>
            <path fill="none" d="M31 31V13h10v18h18v10H41v18H31V41H13V31z"
            ></path>
          </svg>
        </div>

        <img
          src="/work/g.webp"
          alt="imagen"
          loading="lazy"
          class="rounded-br-4xl rounded-tl-4xl"
        />
      </div>
    </div>
  </div>
  <p data-aos="fade-in" data-aos-duration="1000" class="text-center">
    {i18n.DIFFERENTIATION.TEXT}
  </p>
</div>
<style>
  .scene {
    perspective: 1200px;
    -webkit-perspective: 1200px;
  }

  .card {
    transform-style: preserve-3d;
    -webkit-transform-style: preserve-3d;
    transition:
      transform 0.55s cubic-bezier(0.2, 0.9, 0.2, 1),
      box-shadow 0.55s;
    will-change: transform;
    transform-origin: center;
    position: relative;
    display: block;
    height: 100%;
    width: 100%;
    overflow: visible;
    backface-visibility: hidden;
  }

  .card-2 {
    transform: rotateX(5deg) rotateY(16deg);
    box-shadow: -30px 40px 60px rgba(179, 179, 179, 0.25);
  }
  .card-2:hover {
    transform: rotateX(0deg) rotateY(0deg);
    box-shadow: 0 20px 100px rgba(179, 179, 179, 0.25);
  }

  .decor {
    transform: translateZ(0); /* <- aquÃ­ la clave: no sobresalen en Z */
    -webkit-transform: translateZ(0);
    box-shadow: 0 6px 16px rgba(0, 0, 0, 0.18);
    will-change: transform;
    pointer-events: none;
  }

  .decor-strong {
    box-shadow: 0 10px 28px rgba(0, 0, 0, 0.22);
  }

  .card img {
    display: block;
    width: 100%;
    height: 100%;
    object-fit: cover;
    -webkit-backface-visibility: hidden;
    backface-visibility: hidden;
  }
</style>
