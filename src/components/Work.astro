<style>
  .scene {
    perspective: 1200px;
    -webkit-perspective: 1200px;
  }

  .card {
    transform-style: preserve-3d;
    -webkit-transform-style: preserve-3d;
    transition:
      transform 0.55s cubic-bezier(0.2, 0.9, 0.2, 1),
      box-shadow 0.55s;
    will-change: transform;
    transform-origin: center;
    position: relative;
    display: block;
    height: 100%;
    width: 100%;
    overflow: visible;
    backface-visibility: hidden;
  }

  .card-1 {
    transform: rotateX(-5deg) rotateY(-16deg);
    box-shadow: 30px -30px 60px rgba(179, 179, 179, 0.25);
  }
  .card-1:hover {
    transform: rotateX(0deg) rotateY(0deg);
    box-shadow: 0 20px 100px rgba(179, 179, 179, 0.25);
  }

  .card-2 {
    transform: rotateX(5deg) rotateY(16deg);
    box-shadow: -30px 40px 60px rgba(179, 179, 179, 0.25);
  }
  .card-2:hover {
    transform: rotateX(0deg) rotateY(0deg);
    box-shadow: 0 20px 100px rgba(179, 179, 179, 0.25);
  }

  .decor {
    transform: translateZ(0); /* <- aquÃ­ la clave: no sobresalen en Z */
    -webkit-transform: translateZ(0);
    box-shadow: 0 6px 16px rgba(0, 0, 0, 0.18);
    will-change: transform;
    pointer-events: none;
  }

  .decor-strong {
    box-shadow: 0 10px 28px rgba(0, 0, 0, 0.22);
  }

  .card img {
    display: block;
    width: 100%;
    height: 100%;
    object-fit: cover;
    -webkit-backface-visibility: hidden;
    backface-visibility: hidden;
  }
</style>

