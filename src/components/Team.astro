---
import { getLangFromUrl, useTranslation, slugify } from "@/i18n";
import Button_MoreInformation from "@/components/Button_MoreInformation.astro";
import Stars from "./Stars.astro";

const lang = getLangFromUrl(Astro.url);
const i18n = await useTranslation(lang);

// Helpers para ordenar por apellido y formatear "APELLIDO Nombre(s)"
const getLastName = (fullName: any) => {
  const parts = String(fullName || "")
    .trim()
    .split(/\s+/);
  return parts.length ? parts[parts.length - 1] : "";
};

const formatLastFirst = (fullName: any) => {
  const parts = String(fullName || "")
    .trim()
    .split(/\s+/);
  if (!parts.length) return "";
  const last = parts[parts.length - 1];
  const rest = parts.slice(0, -1).join(" ");
  return rest ? `${last} ${rest}` : last;
};

// Ordenar copia del array por apellido y, en caso de empate, por resto del nombre
const sortedTeam = [...(i18n.TEAM?.TEAM || [])].sort((a, b) => {
  const aLast = getLastName(a.NAME);
  const bLast = getLastName(b.NAME);
  const cmp = aLast.localeCompare(bLast, "es", { sensitivity: "base" });
  if (cmp !== 0) return cmp;
  const aFirst = (a.NAME || "").split(/\s+/).slice(0, -1).join(" ");
  const bFirst = (b.NAME || "").split(/\s+/).slice(0, -1).join(" ");
  return aFirst.localeCompare(bFirst, "es", { sensitivity: "base" });
});

// Helper para slug Ãºnico si hay ID (previene duplicados)
const makeSlug = (director: any) => {
  const base = slugify(director.NAME || "");
  return director.ID ? `${base}-${director.ID}` : base;
};
---

<section
  id="team"
  class="mx-auto my-12 min-h-screen flex flex-col items-center justify-center h-full w-full pt-24 gap-8"
>
  <div class="-z-10 h-full w-full fixed top-0 left-0 pointer-events-none">
    <Stars />
  </div>

  <h2
    class="mb-8 font-bold text-4xl text-center text-white glass-effect w-full p-8"
  >
    {i18n.TEAM.TITLE}
  </h2>

  <div
    class="flex flex-col items-center justify-center text-white max-w-7xl px-6 gap-6 mb-12"
  >
    <p
      class="text-center lg:text-left text-4xl font-semibold text-[var(--color-title)]"
    >
      {i18n.TEAM.SUBTITLE}
    </p>
    <p class="text-center lg:text-left text-lg">{i18n.TEAM.TEXT}</p>

    <div
      class="grid grid-cols-1 md:grid-cols-2 gap-10 items-center justify-center max-w-4xl my-10"
    >
      {
        i18n.TEAM.CARDS.map((card) => (
          <div class="relative glass-effect border border-white/25 rounded-xl flex p-4 items-center justify-start">
            <div class="border border-white/15 bg-black/5 w-12 h-12 aspect-square rounded-lg p-3 flex items-center justify-center">
              <img
                src={card.ICON}
                alt={`Icono de ${card.TEXT}`}
                loading="lazy"
                class="w-full h-full object-contain"
              />
            </div>

            <p class="px-4 text-xl font-semibold text-center lg:text-left">
              {card.TEXT}
            </p>

            <div class="absolute left-1/2 -translate-x-1/2 -bottom-1 h-1 w-2/3 bg-[var(--color-title)] rounded-full" />
          </div>
        ))
      }
    </div>

    <p class="text-center lg:text-left text-lg">{i18n.TEAM.TEXT_2}</p>
    <Button_MoreInformation i18n={i18n} lang={lang} />
  </div>

  <div
    class="flex flex-wrap items-center justify-center gap-8 max-w-7xl mx-auto mt-12 px-6"
  >
    {
      sortedTeam.map((director) => {
        const slug = makeSlug(director);
        return (
          <div data-aos="zoom-in" data-aos-duration="1000">
            <a
              href={`/${lang}/our-team/${slug}`}
              class="group relative block h-full lg:w-70 aspect-square overflow-hidden rounded-sm bg-gradient-to-t from-gray-400 to-white transition-all duration-300 hover:scale-105"
            >
              <img
                src={director.IMG}
                alt={`Foto de ${director.NAME}`}
                class="w-full h-full object-cover pointer-events-none"
                loading="lazy"
              />

              <div class="right-3 bottom-3 left-3 absolute bg-[var(--color-bg-1)]/75 transform transition-all duration-400 backdrop-blur-sm p-3 rounded-sm text-white text-center">
                <h3 class="mb-1 font-semibold text-base">
                  {formatLastFirst(director.NAME)}
                </h3>
                <p class="text-xs uppercase tracking-wider">
                  {director.POSITION}
                </p>
              </div>
            </a>
          </div>
        );
      })
    }
  </div>
</section>
