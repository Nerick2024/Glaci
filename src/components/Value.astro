---
import { getLangFromUrl } from "@/i18n/utils";
import { translations } from "@/i18n";

const lang = getLangFromUrl(Astro.url);
const i18n = await translations[lang]();
---

<script src="../scripts/card3d.js"></script>

<div
  id="value"
  class="max-w-6xl h-full text-white mx-auto flex flex-col gap-12 px-6 py-12"
>
  <h1
    data-aos="fade-up"
    data-aos-duration="1000"
    class="mt-4 font-normal text-[32px] text-white md:text-[45px] text-center lg:text-left mb-4"
  >
    <span class="text-[var(--color-title)]">+</span>
    {i18n.VALUE.TITLE}
  </h1>

  <p
    data-aos="fade-in"
    data-aos-duration="1000"
    class="text-center text-xl lg:text-2xl font-light"
  >
    {i18n.VALUE.SUBTITLE}
  </p>

  <!-- Value Items Flex -->
  <div class="flex flex-wrap justify-center gap-6 mt-6">
    {
      i18n.VALUE.ITEMS.map((item, index) => (
        <div
          data-aos="zoom-in"
          data-aos-duration="1000"
          data-aos-delay={index * 150}
          class="w-full md:w-[calc(50%-12px)] lg:w-[calc(33.333%-16px)] flex"
        >
          <div class="value-card relative glass-effect border border-white/25 bg-gradient-to-br from-[var(--color-bg-2)]/30 to-transparent p-6 rounded-lg hover:pl-8 transition-all duration-300 flex-1 group">
            <div class="absolute left-0 top-1/2 -translate-y-1/2 w-1 h-2/3 bg-[var(--color-title)] rounded-full opacity-60 group-hover:opacity-100 group-hover:h-full transition-all duration-300" />

            <div class="flex items-center gap-4">
              <div class="flex-shrink-0 flex items-center justify-center w-12 h-12 rounded-md bg-[var(--color-title)]/10 border border-[var(--color-title)]/20 group-hover:bg-[var(--color-title)]/20 transition-colors duration-300">
                <img
                  src={item.ICON}
                  alt={item.TITLE}
                  class="w-6 h-6 object-contain"
                />
              </div>

              <div class="flex-1">
                <h3 class="text-base font-medium leading-relaxed text-white/90 group-hover:text-white transition-colors duration-300">
                  {item.TITLE}
                </h3>
              </div>
            </div>

            <div class="absolute inset-0 bg-gradient-to-r from-[var(--color-title)]/5 to-transparent opacity-0 group-hover:opacity-100 transition-opacity duration-300 rounded-md" />
          </div>
        </div>
      ))
    }
  </div>

  <!-- Central Message Section -->
  <div class="relative mt-16 min-h-[200px]">
    <!-- Animated background particles -->
    <canvas
      id="value-particles"
      class="absolute inset-0 pointer-events-none w-full h-full"
      width="800"
      height="200"></canvas>

    <div class="relative z-10 text-center space-y-6">
      <div class="relative inline-block">
        <p
          data-aos="fade-in"
          data-aos-duration="1000"
          data-aos-delay="700"
          class="text-2xl lg:text-4xl font-light text-white/80 mb-2"
        >
          {i18n.VALUE.TEXT}
        </p>
        <div
          data-aos="fade-in"
          data-aos-duration="1000"
          data-aos-delay="600"
          class="absolute -bottom-2 left-0 right-0 h-0.5 bg-gradient-to-r from-transparent via-[var(--color-title)] to-transparent"
        >
        </div>
      </div>

      <p
        data-aos="zoom-in"
        data-aos-duration="1000"
        data-aos-delay="1000"
        class="text-3xl lg:text-5xl font-bold text-white glow-text"
      >
        {i18n.VALUE.TEXT_2}
      </p>
    </div>
  </div>
</div>

<style>
  .value-card {
    position: relative;
  }

  .glow-text {
    text-shadow:
      0 0 10px rgba(0, 187, 255, 0.8),
      0 0 20px rgba(0, 187, 255, 0.6),
      0 0 30px rgba(0, 187, 255, 0.4),
      0 0 40px rgba(0, 187, 255, 0.2);
  }

  .floating-element {
    animation: float 4s ease-in-out infinite;
  }

  @keyframes float {
    0%,
    100% {
      transform: translateY(0px) rotate(0deg);
      opacity: 0.3;
    }
    50% {
      transform: translateY(-20px) rotate(180deg);
      opacity: 0.8;
    }
  }

  #value-particles {
    width: 100%;
    height: 100%;
  }
</style>

<script is:inline>
  document.addEventListener("DOMContentLoaded", function () {
    const canvas = document.getElementById("value-particles");
    if (!canvas) return;

    const ctx = canvas.getContext("2d");
    if (!ctx) return;

    let particles = [];

    function resizeCanvas() {
      const parent = canvas.parentElement;
      const rect = parent.getBoundingClientRect();
      canvas.width = rect.width || 800;
      canvas.height = rect.height || 200;
    }

    resizeCanvas();

    // Crear part√≠culas iniciales
    for (let i = 0; i < 5; i++) {
      particles.push(createParticle());
    }

    function createParticle() {
      return {
        x: Math.random() * canvas.width,
        y: canvas.height + 10,
        vx: (Math.random() - 0.5) * 0.5,
        vy: -Math.random() * 2 - 0.5,
        life: 1,
        size: Math.random() * 2 + 0.5,
        hue: Math.random() * 60 + 180,
      };
    }

    function animate() {
      ctx.clearRect(0, 0, canvas.width, canvas.height);

      if (Math.random() < 0.3) {
        particles.push(createParticle());
      }

      particles = particles.filter(function (p) {
        p.x += p.vx;
        p.y += p.vy;
        p.life -= 0.005;

        if (p.life > 0) {
          ctx.save();
          ctx.globalAlpha = p.life * 0.6;
          ctx.shadowBlur = 15;
          ctx.shadowColor = "rgba(0, 187, 255, 0.8)";
          ctx.fillStyle = "rgba(0, 187, 255, 0.6)";
          ctx.beginPath();
          ctx.arc(p.x, p.y, p.size, 0, Math.PI * 2);
          ctx.fill();
          ctx.restore();
          return true;
        }
        return false;
      });

      requestAnimationFrame(animate);
    }

    animate();
    window.addEventListener("resize", resizeCanvas);
  });
</script>
